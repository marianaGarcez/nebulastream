1,42.0,1000

SINK single_var UINT64 single_value$start UINT64 single_value$end FLOAT64 single_value$variance

SELECT start, end, VAR(val) AS variance
FROM single_value
WINDOW TUMBLING(time, size 2 sec)
INTO single_var
----
0,2000,0.0

